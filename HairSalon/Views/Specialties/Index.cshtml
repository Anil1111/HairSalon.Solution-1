@{
  Layout = "_Layout";
}

@using HairSalon.Models;
<h1>Hair Salon Management Portal</h1>
<h1>Current specialties:</h1>
<ul>
  @if (Model.Count == 0){
    <p>There are no specialties currently!</p>
  }
  else
  {
    @foreach (SpecialtyClass specialty in Model)
    {
      <li><strong><a href='/specialties/@specialty.GetId()'>@specialty.GetFeature()</a></strong></li>
    }
  }
</ul>

<a href="/specialties/new">Add a specialty</a>
