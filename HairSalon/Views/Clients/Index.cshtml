@using HairSalon.Models;

<h1>Hair Salon Management Portal</h1>
<h1>Current clients:</h1>
<ul>
  @if (Model.Count == 0){
    <p>No Clients Listed</p>
  }
  else
  {
    @foreach (ClientClass client in Model)
    {
      <li><strong><a href='/stylists/@client.GetStylistId()/clients/@client.GetId()'>@client.GetName()</a></strong></li>
    }
  }
</ul>
<br>
<br>
<form action="/clients/delete" method="post">
  <button type="submit" name="button">Delete all clients</button>
</form>
