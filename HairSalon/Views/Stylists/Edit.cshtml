@{
  Layout = "_Layout";
}

<h1>Hair Salon Management Portal</h1>
<hr>

<h2>Edit stylist: @Model.GetName()</h2>
<form action="/stylists/@Model.GetId()" method="post">
  <div class="form-group">
    <label for="name">First Name:</label>
    <input id="name" name="name" type="text" class="form-control" value="@Model.GetName()" required>
  </div>
  <div class="form-group">
    <label for="phoneNumber">Phone Number:</label>
    <input id="phoneNumber" name="phoneNumber" type="text" class="form-control"  value ="@Model.GetPhoneNumber()" required>
  </div>
  <button type="submit">Edit:</button>
</form>
