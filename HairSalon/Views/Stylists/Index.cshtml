<!DOCTYPE html>
<html>
  <head>
    <title>Hair Salon Database</title>
  </head>
  <body>
    <div class="container">
      @using HairSalon.Models;
      <h1>Hair Salon Database</h1>
      <h2>Current Stylists:</h2>
      <ul>
        @if (Model.Count == 0){
          <p>No stylists are in the data stystem</p>
        }
        else
        {
          @foreach (StylistClass stylist in Model)
          {
            <li><strong><a href='/stylists/@stylist.GetId()'>@stylist.GetName()</a></strong></li>
          }
        }
      </ul>
      <br>
      <br>

      <a href="/stylists/new"type="submit" >Add Stylist</a>
      <br>
      <br>
      <form action="/stylists/delete" method="post">
        <button type="submit">Clear All Stylists</button>
      </form>
      <br>
      <a href="/clients">See All Clients</a>
      <br>
      <br>
      <a href="/specialties">See All Specialties</a>
    </div>
  </body>
</html>
